{
  "name": "@mat/web3",
  "scripts": {
    "compile": "hardhat compile",
    "test": "REPORT_GAS=true mocha --bail --recursive test",
    "dev": "hardhat node",
    "deploy:local": "hardhat run --network localhost scripts/deploy.ts",
    "mat:createuser": "hardhat run --network localhost scripts/create-user.ts",
    "mat:getuser": "hardhat run --network localhost scripts/query-user.ts",
    "mat:checkin": "hardhat run --network localhost scripts/checkin.ts",
    "typings": "typechain --target ethers-v6 artifacts/contracts/Mat.sol/Mat.json",
    "copy:abi": "cp artifacts/contracts/Mat.sol/Mat.json ../web/src/server/contract",
    "copy:typings": "cp -r types ../web"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.8",
    "hardhat": "^2.17.2",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3"
  }
}
